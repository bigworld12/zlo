<Window x:Class="ZloGUILauncher.Views.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZloGUILauncher.Views"
        mc:Ignorable="d"
        Title="InputBox"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock Text="Please Input Game Password : " x:Name="RequestText"/>
        <TextBox x:Name="ResultText" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Margin="5" Click="OkButton_Click" Content="Done"/>
            <Button Margin="5" Click="CancelButton_Click" Content="Cancel"/>
        </StackPanel>
        
    </StackPanel>
</Window>
